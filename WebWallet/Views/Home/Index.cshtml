@{
    ViewData["Title"] = "Home Page";
}

@using WebWallet.Data.DTO.Accounts;
@using WebWallet.Models.ViewModels
@model HomeViewModel

<div class="text-center">
    <div class="card">
        <div class="card-header d-inline-flex justify-content-between">
            <div class="display-6">
                Contas
            </div>
            <div class="">
                <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#createAccount">
                    Nova Conta
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex d-flex flex-wrap">
                @foreach (ReadAccountDTO account in Model.Accounts)
                {
                    <a href="" data-bs-toggle="modal" data-bs-target="#viewAccount-@account.AccountID" class="card col-6">
                        <div class="card-body d-inline-flex justify-content-between">
                            <div class="text-dark">
                                @account.Name
                            </div>
                            <div class="text-dark">
                                R$ @(account.Amount)
                            </div>
                            <div>
                                @account.AccountNumber
                            </div class="text-dark">
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<!-- CADASTRAR CONTA -->
<div class="modal" id="createAccount" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Nova Conta</h4>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-controller="Account" asp-action="Create">
                <div class="modal-body">              
                    <p>Informe os dados da nova conta</p>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Nome</span>
                        </div>
                        <input type="text" class="form-control" aria-describedby="basic-addon1" name="name" placeholder="Para identificar a conta" required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">R$</span>
                        </div>
                        <input type="number" class="form-control" aria-label="Saldo" name="amount" placeholder="Saldo">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Nº</span>
                        </div>
                        <input type="text" class="form-control" aria-label="Numero da Conta" name="accountNumber" placeholder="Número da Conta (opcional)">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Tipo de Conta</span>
                        </div>
                        <select class="form-control" name="accountTypeId" required>
                            <option selected disabled>Escolha...</option>
                            <option value="1">Dinheiro</option>
                            <option value="2">Conta Corrente</option>
                            <option value="3">Conta Poupança</option>
                            <option value="4">Conta em Corretora</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Cadastrar</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

                            
<!-- VISUALIZA CONTA -->
@foreach (ReadAccountDTO account in Model.Accounts)
{
<div class="modal" id="viewAccount-@account.AccountID" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalhes da Conta</h4>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-controller="Account" asp-action="">
                <div class="modal-body">              
                    <p>Informe os dados da nova conta</p>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Nome</span>
                        </div>
                        <input type="text" class="form-control" aria-describedby="basic-addon1" name="name" placeholder="Para identificar a conta" value="@account.Name" disabled>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">R$</span>
                        </div>
                        <input type="text" class="form-control" aria-label="Saldo" name="amount" placeholder="Saldo" value="@account.Amount" disabled>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Nº</span>
                        </div>
                        <input type="text" class="form-control" aria-label="Numero da Conta" name="accountNumber" placeholder="Número da Conta (opcional)" value="@account.AccountNumber" disabled>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Tipo de Conta</span>
                        </div>
                        <select class="form-control" name="accountTypeId" disabled>
                            <option>Escolha...</option>
                            @switch (account.AccountTypeID)
                                {
                                    case 1:
                                        <option selected value="1">Dinheiro</option>
                                        <option value="2">Conta Corrente</option>
                                        <option value="3">Conta Poupança</option>
                                        <option value="4">Conta em Corretora</option>
                                        break;
                                     case 2:
                                        <option value="1">Dinheiro</option>
                                        <option selected value="2">Conta Corrente</option>
                                        <option value="3">Conta Poupança</option>
                                        <option value="4">Conta em Corretora</option>
                                        break;
                                     case 3:
                                        <option value="1">Dinheiro</option>
                                        <option value="2">Conta Corrente</option>
                                        <option selected value="3">Conta Poupança</option>
                                        <option value="4">Conta em Corretora</option>
                                        break;
                                    case 4:
                                        <option value="1">Dinheiro</option>
                                        <option value="2">Conta Corrente</option>
                                        <option value="3">Conta Poupança</option>
                                        <option selected value="4">Conta em Corretora</option>
                                        break;
                                    default:
                                        <option value="1">Dinheiro</option>
                                        <option value="2">Conta Corrente</option>
                                        <option value="3">Conta Poupança</option>
                                        <option value="4">Conta em Corretora</option>
                                        break;
                                }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" hidden>Salvar</button>
                    <a type="button" class="btn btn-danger" asp-controller="Account" asp-action="Delete" asp-route-accountid="@account.AccountID">Excluir</a>
                </div>
            </form>
        </div>
    </div>
</div>
}