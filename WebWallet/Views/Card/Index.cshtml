@{
    ViewData["Title"] = "Cartões";
}

@using WebWallet.Models.ViewModels;
@using WebWallet.Data.DTO.Card;

@model CardViewModel;

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <div class="card mb-4 shadow">
            <div class="card-header d-inline-flex justify-content-between">
                <div class="h3 mb-0">
                    Cartões
                </div>
                <div class="">
                    <button type="button" class="btn btn-outline-secondary" style="padding-bottom: 0px" data-bs-toggle="modal" data-bs-target="#createCard">
                        <span class="material-symbols-outlined">
                            add
                        </span>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap">
                    @foreach (ReadCardDTO card in Model.Cards)
                    {
                        <div class="p-1 col-6">
                            <a href="" data-bs-toggle="modal" data-bs-target="#viewAccount-@card.CardID" class="card col-12 shadow-sm text-dark">
                                <div class="card-body d-inline-flex justify-content-between">
                                    <div class="">
                                        @card.Number
                                    </div>
                                    <div class="">
                                        R$ @card.Limit
                                    </div>
                                    <div class="">
                                        @card.ExpiringDate
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="h4 m-2">
                    Total: R$ 0,00
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="createCard" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Novo Cartão</h4>
                    <button type="button" class="btn btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-controller="Card" asp-action="Create">
                    <div class="modal-body">
                        <p>Informe os dados do cartão</p>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">N°</span>
                            </div>
                            <input type="text" class="form-control" aria-describedby="basic-addon1" name="Number" placeholder="Para identificar o cartão" required>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">R$</span>
                            </div>
                            <input type="number" step=".01" class="form-control" aria-label="Saldo" name="amount" placeholder="Saldo">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Nº</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Numero da Conta" name="accountNumber" placeholder="Número da Conta (opcional)">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tipo de Conta</span>
                            </div>
                            <select class="form-control" name="AccountTypeID" required>
                                <option selected disabled>Escolha...</option>
                                <option value="1">Dinheiro</option>
                                <option value="2">Conta Corrente</option>
                                <option value="3">Conta Poupança</option>
                                <option value="4">Conta em Corretora</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Cadastrar</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <h1>Web Wallet</h1>

    <p>Plataforma para gerenciamento financeiro pessoal</p>
}