@using WebWallet.Models.ViewModels;
@{
    ViewData["Title"] = "Cartões";
}

@model CardDetailViewModel;

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 shadow">
                    <div class="card-header d-inline-flex justify-content-between">
                        <div class="h3 mb-0">
                            Cartão: @Model.Card.Number
                        </div>
                        <div class="row">
                            <div class="input-group">
                                <a class="btn btn-outline-danger" asp-controller="Card" asp-action="Delete" asp-route-id="@Model.Card.CardID">
                                    Remover Cartão
                                </a>
                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#createCard">
                                    Nova Fatura
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" name="Number" value="@Model.Card.Number">

                        </div>
                    </div>
                    <div class="card-body">
                        <div class="h5 m-2">
                            Limite: R$ @Model.Card.Limit
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1>Web Wallet</h1>

    <p>Plataforma para gerenciamento financeiro pessoal</p>
}