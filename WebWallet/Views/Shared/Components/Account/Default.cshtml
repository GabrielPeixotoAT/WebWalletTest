@using WebWallet.Data.DTO.Accounts

@model List<ReadAccountDTO>

@foreach (ReadAccountDTO account in Model)
{
    <div class="p-1 col-6">
        <a href="" data-bs-toggle="modal" data-bs-target="#viewAccount-@account.AccountID" class="card col-12 shadow-sm">
            <div class="card-body d-inline-flex justify-content-between">
                <div class="text-dark">
                    @account.Name
                </div>
                <div class="text-dark">
                    R$ @(account.Amount)
                </div>
                <div class ="text-dark">
                    @account.AccountNumber
                </div>
            </div>
        </a>
    </div>
}